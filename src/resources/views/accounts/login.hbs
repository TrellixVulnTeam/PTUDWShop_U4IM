 <body class="login">
    <div>
      <a class="hiddenanchor" id="signup"></a>
      <a class="hiddenanchor" id="signin"></a>

      <div class="login_wrapper">
        <div class="animate form login_form">
          <section class="login_content">
            <form method="POST">
              <h1>Login Form</h1>
              <div>
                <input type="text" name="_username" class="form-control" placeholder="Username" required="" />
              </div>
              <div>
                <input type="password" name="_password" class="form-control" placeholder="Password" required="" />
              </div>
                <p>{{data._message}}</p>
              <div>
                <button type="submit" class="btn btn-success">Log in</button>
                <a class="reset_pass">Lost your password?</a>
              </div>

              
            </form>
          </section>
        </div>
      </div>
    </div>
  </body>